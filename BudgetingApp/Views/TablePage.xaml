<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:vm="clr-namespace:BudgetingApp.ViewModels"
             x:Class="BudgetingApp.Views.TablePage"
             Title="TablePage">
    <VerticalStackLayout>
        <CollectionView ItemsSource="{Binding ExpensesCollection}">
            <CollectionView.ItemTemplate>
                <DataTemplate>
                    <Frame BorderColor="Black" CornerRadius="20">
                        <Grid RowDefinitions="*,*" ColumnDefinitions="2*,*" Padding="0" RowSpacing="2">
                            <Label Text="{Binding StoreName}" FontSize="20" />
                            <Label Grid.Column="1" Text="{Binding Category}" VerticalOptions="End"/>
                            <Label Grid.Row="1" Text="{Binding Amount, StringFormat='{0:C}'}" />
                        </Grid>
                    </Frame>                    
                </DataTemplate>
            </CollectionView.ItemTemplate>
        </CollectionView>
    </VerticalStackLayout>
</ContentPage>