<?xml version="1.0" encoding="utf-8" ?>
<ContentPage
    x:Class="BudgetingApp.Views.TablePage"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:vm="clr-namespace:BudgetingApp.ViewModels"
    Title="TablePage">
    <VerticalStackLayout>
        <CollectionView ItemsSource="{Binding ExpensesCollection}">
            <CollectionView.ItemTemplate>
                <DataTemplate>
                    <Frame BorderColor="Black" CornerRadius="20">
                        <Grid Padding="0" ColumnDefinitions="*,*,*,*,*">
                            <Label Text="{Binding Title}" />
                            <Label Grid.Column="1" Text="{Binding StoreName}" />
                            <Label
                                Grid.Column="2"
                                Text="{Binding Category}"
                                VerticalOptions="End" />
                            <Label Grid.Column="3" Text="{Binding Amount, StringFormat='{0:C}'}" />
                            <Label Grid.Column="4" Text="{Binding CreatedTime}" />
                        </Grid>
                    </Frame>
                </DataTemplate>
            </CollectionView.ItemTemplate>
        </CollectionView>
    </VerticalStackLayout>
</ContentPage>