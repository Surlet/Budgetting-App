<?xml version="1.0" encoding="utf-8" ?>
<toolkit:Popup
    x:Class="BudgetingApp.Views.AddBeneficiaryPopup"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:toolkit="clr-namespace:CommunityToolkit.Maui.Views;assembly=CommunityToolkit.Maui"
    Color="Transparent">
    <Frame
        BackgroundColor="White"
        CornerRadius="20"
        HasShadow="True">
        <VerticalStackLayout Padding="10" Spacing="20">
            <HorizontalStackLayout Spacing="10">
                <Label Text="Beneficiary Name" VerticalOptions="Center" />
                <Entry Text="{Binding BeneficiaryName}" WidthRequest="250" />
            </HorizontalStackLayout>
            <HorizontalStackLayout Spacing="10">
                <Button
                    BackgroundColor="#FF7444"
                    Command="{Binding AddBeneficiaryCommand}"
                    HorizontalOptions="Start"
                    Text="Add"
                    WidthRequest="100" />
                <Button
                    BackgroundColor="#FF7444"
                    Command="{Binding CancelCommand}"
                    HorizontalOptions="End"
                    Text="Cancel"
                    WidthRequest="100" />
            </HorizontalStackLayout>
        </VerticalStackLayout>
    </Frame>
</toolkit:Popup>